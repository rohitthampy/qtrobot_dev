{
    "name": "cci QTrobot",
    "dockerFile": "Dockerfile",
    "customizations": {
        "vscode": {
            "extensions": ["ms-python.python", "ms-vscode.cpptools"],
            "settings": {
                "remote.autoForwardPorts": false
            }
        }
    },
    "runArgs": [
        "--network=host",
        "-e", "DISPLAY=${env:DISPLAY}",
        "-v", "/tmp/.X11-unix:/tmp/.X11-unix"
    ],

    "containerEnv": {
     "DISPLAY": "${localEnv:DISPLAY}"
    },
    
    "workspaceMount": "source=${localWorkspaceFolder},target=/${localWorkspaceFolderBasename},type=bind",
    "workspaceFolder": "/${localWorkspaceFolderBasename}",
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.bash_history,target=/home/vscode/.bash_history,type=bind"
    ],
    "postCreateCommand": "echo 'export ROS_MASTER_URI=http://QTRD000349.arts.local:11311' >> ~/.bashrc && echo 'export ROS_IP=$(hostname -I | awk \"{print \\$1}\")' >> ~/.bashrc && echo 'source /opt/ros/noetic/setup.bash' >> ~/.bashrc"

}